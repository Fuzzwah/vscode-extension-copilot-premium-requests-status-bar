{
  "name": "vscode-copilot-premium-requests-status-bar",
  "displayName": "GitHub Copilot Premium Requests Status Bar",
  "description": "Display GitHub Copilot premium request usage in VS Code status bar",
  "version": "0.1.0",
  "publisher": "fuzzwah",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copilotPremiumRequests",
          "title": "Copilot Usage",
          "icon": "$(copilot)"
        }
      ]
    },
    "views": {
      "copilotPremiumRequests": [
        {
          "type": "webview",
          "id": "copilotPremiumRequests.usageView",
          "name": "Usage Details"
        }
      ]
    },
    "commands": [
      {
        "command": "copilotPremiumRequests.debugApi",
        "title": "Debug: Show Raw API Response"
      },
      {
        "command": "copilotPremiumRequests.showDetails",
        "title": "Show Copilot Usage Details"
      },
      {
        "command": "copilotPremiumRequests.refresh",
        "title": "Refresh Copilot Usage"
      },
      {
        "command": "copilotPremiumRequests.refreshUsageView",
        "title": "Refresh Usage View",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "copilotPremiumRequests.refreshUsageView",
          "when": "view == copilotPremiumRequests.usageView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "GitHub Copilot Premium Requests",
      "properties": {
        "copilotPremiumRequests.budgetDollars": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "description": "Budget for overage/premium requests in dollars (e.g., 30 for $30 budget). Converts to 25 requests per dollar ($0.04 per request). Leave at 0 to use API-provided value."
        },
        "copilotPremiumRequests.budgetRequests": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "description": "Advanced: Direct override for budget requests. Use budgetDollars instead for easier configuration. Leave at 0 to use API-provided value."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha --require ts-node/register 'tests/unit/**/*.test.ts'",
    "test:coverage": "nyc npm run test:unit",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.x",
    "@types/sinon": "^17.0.2",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "chai": "^4.5.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.1.1",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
